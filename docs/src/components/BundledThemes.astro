const themes: BundledShikiTheme[] = [
	'andromeeda',
	'aurora-x',
	'ayu-dark',
	'catppuccin-frappe',
	'catppuccin-latte',
	'catppuccin-macchiato',
	'catppuccin-mocha',
	'dark-plus',
	'dracula',
	'dracula-soft',
	'everforest-dark',
	'everforest-light',
	'github-dark',
	'github-dark-default',
	'github-dark-dimmed',
	'github-dark-high-contrast',
	'github-light',
	'github-light-default',
	'github-light-high-contrast',
	'houston',
	'laserwave',
	'light-plus',
	'material-theme',
    'material-theme-darker',
    'material-theme-lighter',
    'material-theme-ocean',
    'material-theme-palenight',
    'min-dark',
    'min-light',
    'monokai',
	'night-owl',
    'nord',
    'one-dark-pro',
    'poimandres',
	'red',
    'rose-pine',
    'rose-pine-dawn',
    'rose-pine-moon',
    'slack-dark',
    'slack-ochin',
	'snazzy-light',
    'solarized-dark',
    'solarized-light',
	'synthwave-84',
	'tokyo-night',
	'vesper',
	'vitesse-black',
    'vitesse-dark',
    'vitesse-light',
]
---

<style>
	.theme-gallery {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(16rem, 1fr));
		grid-gap: 2rem 1rem;
	}
</style>

<div class="theme-gallery not-content">
	{themes.map(theme => <ThemePreview theme={theme}/>)}
</div>
